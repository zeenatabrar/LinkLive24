---
const navLinks = [
  { href: "/", text: "HOME" },
  { href: "/newspaper", text: "NEWSPAPER" },
  { href: "/india", text: "INDIA" },
  { href: "/world", text: "WORLD" },
  { href: "/sports", text: "SPORTS" },
  { href: "/entertainment", text: "ENTERTAINMENT" },
];

const mobileNavLinks = [
  { href: "/", text: "HOME" },
  { href: "/newspaper", text: "NEWSPAPER" },
  { href: "/india", text: "INDIA" },
  { href: "/world", text: "WORLD" },
  { href: "/sports", text: "SPORTS" },
  { href: "/entertainment", text: "ENTERTAINMENT" },
];
---

<div class="header">
  <div class="header-container">
    <div>
      <img src="/logo.jpg" alt="News24 Logo" class="logo" />
    </div>
    <div class="hamburger" id="hamburger">
      <i class="fas fa-bars"></i>
    </div>
    <nav class="nav">
      {navLinks.map((link) => <a href={link.href}>{link.text}</a>)}
    </nav>
  </div>
  <div class="mobile-menu" id="mobileMenu">
    <div class="mobile-menu-header">
      <img src="/logo.jpg" alt="News24 Logo" class="mobile-logo" />
      <div class="close-btn" id="closeMenu">
        <i class="fas fa-times"></i>
      </div>
    </div>
    {mobileNavLinks.map((link) => <a href={link.href}>{link.text}</a>)}
  </div>
</div>

<style>
  .header {
    background: #222;
    padding: 0;
    border-bottom: 2px solid #e60000;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1600px;
    margin: 0 auto;
    width: 100%;
    padding: 10px 15px;
    box-sizing: border-box;
  }

  .logo {
    height: 50px;
    width: auto;
    transition: height 0.3s ease;
  }

  .nav {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    font-weight: bold;
    font-size: 14px;
  }

  .nav a {
    color: white;
    text-decoration: none;
    white-space: nowrap;
  }

  .hamburger {
    display: none;
    cursor: pointer;
    font-size: 20px;
    color: white;
  }

  /* .mobile-menu {
    display: none;
    flex-direction: column;
    background: #feffff;
    width: 100%;
    position: absolute;
    top: 100%;
    left: 0;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .mobile-menu.active {
    display: flex;
    max-height: 100vh;
  } */

  .mobile-menu {
    display: none;
    flex-direction: column;
    background: #feffff;
    width: 100%;
    position: fixed; /* Fixed to cover the screen */
    top: 0;
    left: 0;
    height: 50vh;
    z-index: 2000; /* higher than header */
    overflow-y: auto;
    padding-top: 20px;
    transition: transform 0.3s ease-out;
    transform: translateY(-100%);
  }

  .mobile-menu.active {
    display: flex;
    transform: translateY(0);
  }

  .mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px;
    border-bottom: 1px solid #eee;
  }

  .mobile-logo {
    height: 40px;
  }

  .close-btn {
    font-size: 24px;
    color: #333;
    cursor: pointer;
  }

  .mobile-menu a {
    color: rgb(3, 0, 0);
    text-decoration: none;
    padding: 12px 15px;
    font-weight: bold;
    font-size: 14px;
    border-bottom: 1px solid #eee;
  }

  @media (max-width: 1023px) {
    .nav {
      display: none;
    }

    .hamburger {
      display: block;
    }
  }

  @media (min-width: 600px) {
    .logo {
      height: 60px;
    }
  }

  @media (min-width: 1024px) {
    .logo {
      height: 70px;
    }

    .nav {
      gap: 24px;
      font-size: 16px;
    }
  }
</style>

<script>
  // Add this JavaScript to handle the mobile menu toggle
  document.addEventListener("DOMContentLoaded", function () {
    const hamburger = document.getElementById("hamburger");
    const mobileMenu = document.getElementById("mobileMenu");
    const closeMenu = document.getElementById("closeMenu");

    if (hamburger && mobileMenu) {
      hamburger.addEventListener("click", function () {
        mobileMenu.classList.add("active");
      });
    }

    if (closeMenu && mobileMenu) {
      closeMenu.addEventListener("click", function () {
        mobileMenu.classList.remove("active");
      });
    }
  });
</script>
